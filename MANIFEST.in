# Include build system files
include CMakeLists.txt
include meson.build
include meson.options
include pyproject.toml
include README.md
include LICENSE
include BUILD.md

# Include C source and headers
recursive-include include *.h
recursive-include src *.c

# Include MuPDF headers (needed for compilation)
recursive-include mupdf/include *.h

include lib/mupdf/libmupdf.so*
include lib/mupdf/libmupdf.dylib
include lib/mupdf/*.dll

prune build
prune dist
prune *.egg-info
prune **/__pycache__
global-exclude *.pyc *.pyo
